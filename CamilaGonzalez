/*
Ejercicio 2: Leer 5 números, guardarlos en un arreglos y mostrarlos en el orden
inverso al introducido.
 */
package arreglos_ejercicios_2;

import java.util.Scanner;

public class Arreglos_Ejercicio_2 {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        float arreglos[] = new float[5];
        System.out.println("Guardamos los números en el arreglo");
        for(int i = 0; i < 5; i++){
            System.out.println((i+1)+". Ingrese un número");
            arreglos[i] = entrada.nextFloat();
        }
        System.out.println("\nElementos del arreglo: ");
        for(int i =4; i > 0;i--){
            System.out.println(i+" "+arreglos[i]);
        }
        System.out.println("\n");
    }
}
